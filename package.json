{
  "name": "nightswatch",
  "version": "1.0.0",
  "description": "Night's Watch, the OIDC Relying Party that guards the realms",
  "main": "./dist/index.js",
  "scripts": {
    "build": "npm run clean && npm run build-ts && npm run lint",
    "clean": "rimraf dist",
    "build-ts": "tsc",
    "debug": "npm run build-ts && npm run watch-debug",
    "dev": "ts-node-dev --inspect --no-notify --respawn --transpile-only src/index",
    "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\" --quiet --fix",
    "serve": "node dist/index.js",
    "serve-debug": "nodemon --inspect dist/index.js",
    "start": "npm run serve",
    "jest": "jest --watch --verbose",
    "test": "jest --forceExit --coverage --verbose",
    "watch": "concurrently -k -p \"[{name}]\" -n \"srv,tsc\" -c \"yellow.bold,cyan.bold\" -i \"npm run watch-node\" \"npm run watch-ts\" ",
    "watch-debug": "concurrently -k -i -p \"[{name}]\" -n \"srv,tsc\"  -c \"yellow.bold,cyan.bold\" \"npm run serve-debug\" \"npm run watch-ts\" ",
    "watch-node": "nodemon dist/index.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "readmeFilename": "README.md",
  "author": {
    "name": "Daniele Fiungo",
    "email": "danielefiungo@gmail.com"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6.4.1"
  },
  "license": "MIT",
  "dependencies": {
    "@ghii/ghii": "0.0.8",
    "@ghii/package-json-loader": "^1.0.0",
    "@ghii/yaml-loader": "0.0.2",
    "@godaddy/terminus": "^4.3.1",
    "@iad-os/aemon-oidc-introspect": "^0.2.9",
    "@iad-os/jorah-policy-middleware": "^0.0.7",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-pino-logger": "^6.0.0",
    "helmet": "^4.3.1",
    "http-proxy-middleware": "^1.0.0",
    "http-status": "^1.4.2",
    "js-yaml": "^3.13.1",
    "lodash.get": "^4.4.2",
    "lodash.map": "^4.6.0",
    "lodash.merge": "^4.6.2",
    "lodash.set": "^4.3.2",
    "lodash.tonumber": "^4.0.3",
    "lru-cache": "^6.0.0",
    "node-cache": "^5.1.0",
    "openid-client": "^3.13.0",
    "parse-duration": "^0.1.2",
    "passport": "^0.4.1",
    "pino": "^5.16.0",
    "shortid": "^2.2.15",
    "type-fest": "^1.1.1",
    "wait-on": "^5.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/concurrently": "^5.2.1",
    "@types/cookie-session": "^2.0.38",
    "@types/cors": "^2.8.9",
    "@types/debug": "^4.1.5",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.10",
    "@types/express-pino-logger": "^4.0.2",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.167",
    "@types/lodash.get": "^4.4.6",
    "@types/lodash.map": "^4.6.13",
    "@types/lru-cache": "^5.1.0",
    "@types/node": "^14.14.20",
    "@types/passport": "^1.0.6",
    "@types/pino": "^5.15.5",
    "@types/shortid": "0.0.29",
    "@types/supertest": "^2.0.10",
    "@types/wait-on": "^5.2.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
